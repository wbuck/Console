<UserControl x:Class="Console.UI.Views.PrinterStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Console.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1500">
    <Grid Background="Black"
          ManipulationBoundaryFeedback="UIElement_OnManipulationBoundaryFeedback">
        <Grid.RowDefinitions>
            <RowDefinition Height="203*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="517*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" 
                Grid.Row="0" 
                Background="White" 
                CornerRadius="2" 
                Margin="5" 
                BorderBrush="{StaticResource HighlightSolidColorBrush}"
                BorderThickness="0.8">
            <Canvas Background="{StaticResource PrinterPicture}"/>
        </Border>
        <Border Grid.Column="0" 
                Grid.Row="0"  
                Grid.RowSpan="2"
                BorderThickness="0.8" 
                BorderBrush="{StaticResource HighlightSolidColorBrush}"
                CornerRadius="2" 
                Margin="5"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        CornerRadius="2,2,0,0"
                        Margin="5,5,5,0"
                        Background="{StaticResource DarkGraySolidColorBrush}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Canvas Background="{StaticResource PrintPreviewVisualBrush}"
                                VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                                Height="45" 
                                Width="40"/> 
                        <TextBlock Text="Print Preview"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="25"
                               FontWeight="Bold"
                               Foreground="{StaticResource HighlightSolidColorBrush}"
                               Margin="15"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1"
                        CornerRadius="0,0,2,2"
                        Margin="5,0,5,5"
                        Background="#FFC7C5C5">
                
                </Border>
            </Grid>
        </Border>
        <Border Grid.Column="1" 
                Grid.Row="1" 
                BorderBrush="{StaticResource HighlightSolidColorBrush}"
                BorderThickness="0.8" 
                CornerRadius="2" 
                Margin="5"
                Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!-- Current job section -->
                <Border Grid.Row="0" 
                        Grid.Column="0"
                        Grid.RowSpan="2"
                        Background="{StaticResource DarkGraySolidColorBrush}"
                        Margin="5,5,0,5"
                        CornerRadius="2,0,0,2"
                        Panel.ZIndex="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Canvas Grid.Row="0"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Height="45" 
                                Width="40" 
                                Background="{StaticResource SelectedJobIconVisualBrush}"/>
                    </Grid>
                    
                </Border>

                <Border Grid.Row="0" 
                        Grid.Column="1" 
                        Grid.RowSpan="2" 
                        CornerRadius="2"
                        Margin="0,5,5,5"
                        Background="#FFC7C5C5">
                    <ScrollViewer PanningMode="VerticalOnly" Style="{StaticResource CustomScrollViewer}">
                        <Grid ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Grid.Row="0" 
                                       Text="Selected Job" 
                                       HorizontalAlignment="Left" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       Margin="8,0,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="1"
                                       Text="Job ID :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="2"
                                       Text="Document :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="3"
                                       Text="Media :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="4"
                                       Text="Sheet Ranges | Printed :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="5"
                                       Text="State :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="6"
                                       Text="Copies | Printed :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="7"
                                       Text="Speed :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="8"
                                       Text="Quality :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="9"
                                       Text="Mode :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Grid.Column="0" Grid.Row="10"
                                       Text="Orientation :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Print queue section -->
                <Border Grid.Row="0" 
                        Grid.Column="2"
                        Background="{StaticResource DarkGraySolidColorBrush}"
                        Margin="5,5,0,5"
                        CornerRadius="2,0,0,2"
                        Panel.ZIndex="1">
                    <Canvas VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Height="40" 
                            Width="45" 
                            Background="{StaticResource QueueIconVisualBrush}"/>
                </Border>
                <Border Grid.Row="0" 
                        Grid.Column="3" 
                        CornerRadius="2"
                        Margin="0,5,5,5"
                        Background="#FFC7C5C5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="0" 
                                   Text="Print Queue" 
                                   HorizontalAlignment="Left" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="8,0,0,0"/>
                        <StackPanel Grid.Column="0" Grid.Row="1">
                        <TextBlock Text="Jobs In Queue :"
                                   Margin="8,0,0,0"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Text="Jobs On Hold :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="0"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Text="0"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                        </StackPanel>
                        
                    </Grid>
                </Border>

                <!-- Notifications section -->
                <Border Grid.Row="1" 
                        Grid.Column="2"
                        Background="{StaticResource DarkGraySolidColorBrush}"
                        Margin="5,5,0,5"
                        CornerRadius="2,0,0,2"
                        Panel.ZIndex="1">
                    <Canvas VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Height="35" 
                            Width="10"  
                            Background="{StaticResource ExclamationVisualBrush}"/>
                </Border>
                <Border Grid.Row="1" 
                        Grid.Column="3" 
                        CornerRadius="2"
                        Margin="0,5,5,5"
                        Background="#FFC7C5C5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Grid.Row="0" 
                                   Text="Notifications" 
                                   HorizontalAlignment="Left" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   Margin="8,0,0,0"/>
                        <StackPanel Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="Printer Errors :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                            <TextBlock Text="Printer Warnings :"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGraySolidColorBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="0"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="Red"/>
                            <TextBlock Text="0"
                                       Margin="8,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="#FFCB8914"/>
                        </StackPanel>

                    </Grid>
                </Border>

